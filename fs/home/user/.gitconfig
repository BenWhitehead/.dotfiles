[user]
	name = BenWhitehead
	email = BenWhitehead@users.noreply.github.com
[push]
	default = simple
	autoSetupRemote = true
[core]
	autocrlf = input
  ignorecase = false
  pager = cat
  excludesfile = ~/.gitignore
[color]
	whitespace = trailing-space,space-before-tab,tab-in-indent
[color "diff"]
  whitespace = blue reverse
[commit]
  cleanup=scissors
[diff]
  algorithm = patience
  renames = copies
# When comparing zipped files, unzip them first to compare the contents
[diff "zip"]
  textconv = unzip -c -a
[pager]
  diff = less -F
  log = less -F
  reflog = less -F
  show = less -F

[pull]
	ff = only

[alias]
  co-pr = "!f() { git fetch ${2:-origin} pull/$1/${3:-head}:pull/$1/${3:-head} && git checkout pull/$1/${3:-head}; }; f"

### Machine specific config
[credential "https://source.developers.google.com"]
  helper = gcloud.sh

[http]
	cookiefile = /usr/local/google/home/benwhitehead/.gitcookies
